{
	"compilerOptions": {
		"baseUrl": ".",
		"target": "es6",
		"module": "commonjs",
		"outDir": "dist",
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"sourceMap": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"moduleResolution": "node",
		"lib": ["dom", "es2017", "es2015", "es2015.promise"]
	},
	"include": ["./src/index.ts"],
	"exclude": ["node_modules", "./static"]
}
